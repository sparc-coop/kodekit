<div class="color-card">
    <ColorBlotch Hex="@Hex" />
    <div class="color-card--content">
        <label>@Weight</label>
        <div class="color-info">
            <p class="hex">@Hex</p>
            <aside class="swatch" style="background: @FillColor;"></aside>
        </div>
    </div>
</div>
 
@code {
    [Parameter] public string Type { get; set; }
    [Parameter] public string Weight { get; set; }
    [Parameter] public string Hex { get; set; }

    string FillColor => Hex.StartsWith("#") ? Hex : $"var(--{Hex})";
}