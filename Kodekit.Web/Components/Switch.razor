@inherits InputCheckbox

<div class="section-container @(IsDisabled ? "disabled" : "")">
    <label class="switch">
        <input type="checkbox" @bind="CurrentValue" disabled="@IsDisabled">
        <span class="slider"></span>
    </label>
    @Title
</div>

@code {
    [Parameter] public string Title { get; set; }

    [Parameter] public bool IsDisabled { get; set; }
}
