@code {
    bool ShowMobileMenu = false;
    string Show = "";
    [Parameter] public string kitId { get; set; }

    private void ToggleMobile()
    {
        ShowMobileMenu = !ShowMobileMenu;

        if (ShowMobileMenu == true)
            Show = "show-mobile";
        else
            Show = "";
    }

    private string Link(string page) => $"/{kitId}/{page}";
}