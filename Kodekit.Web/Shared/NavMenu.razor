@code {
    bool ShowMobileMenu = false;
    string Show = "";

    private void ToggleMobile()
    {
        ShowMobileMenu = !ShowMobileMenu;

        if (ShowMobileMenu == true)
            Show = "show-mobile";
        else
            Show = "";
    }
}