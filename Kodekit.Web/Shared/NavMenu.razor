<div class="header">
    @if (ShowMobileMenu == false)
    {
        <span class="material-icons mobile" @onclick="ToggleMobile">menu</span>
    }
    else
    {
        <span class="material-icons mobile" @onclick="@ToggleMobile">close</span>
    }
    <a class="logo" href="/">
        <img src="/images/logo.svg" />
        KODEKIT
    </a>
    <LoginDisplay />
</div>

