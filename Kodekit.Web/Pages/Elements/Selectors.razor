@inherits HighlightPageBase
@page  "/{kitId}/selectors"

<div class="selectors page">
    <div class="page__container">
        <header>
            <div class="title">Elements</div>
            <h2>Selectors & Toggles</h2>
            <p>
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
        </header>
        <div class="content">
            <h3>Style & States</h3>
            <p class="subheader">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
            @if (Model != null)
            {
                <EditForm Model="@Model">
                    <div class="section">
                        <label>
                            Label Font Size
                            <InputNumber @bind-Value="Model.FontSize" />
                        </label>
                        <label>
                            Label Font Weight
                            <FontWeights @bind-Value="Model.FontWeight" />
                        </label>
                        <label>
                            Active Color
                            <Colors KitId="@kitId" @bind-Value="Model.ActiveColor" />
                        </label>
                    </div>
                    <div class="preview-example">
                        <div>
                            <label>
                                <input type="checkbox" /> Default
                            </label>
                            <label>
                                <input type="checkbox" checked /> Active
                            </label>
                            <label>
                                <input type="checkbox" disabled /> Disabled
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" /> Default
                            </label>
                            <label>
                                <input type="radio" checked /> Active
                            </label>
                            <label>
                                <input type="radio" disabled /> Disabled
                            </label>
                        </div>
                    </div>
                    <pre>
                        <code class="language-html">
&lt;input type="checkbox"/&gt;
&lt;input type="checkbox" active /&gt;
&lt;input type="checkbox" disabled /&gt;

&lt;input type="radio"/&gt;
&lt;input type="radio" checked /&gt;
&lt;input type="radio" disabled /&gt;
                        </code>
                    </pre>
                    <SaveAndContinue OnSubmit=Submit NextPage="dropdowns" />
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string kitId { get; set; }
    UpdateSelectorsModel Model;

    protected override async Task OnInitializedAsync()
    {
        Model = await PublicApi().GetSelectorsAsync(kitId);
    }

    private async Task Submit()
    {
        await PublicApi().UpdateSelectorsAsync(Model);
    }
}
