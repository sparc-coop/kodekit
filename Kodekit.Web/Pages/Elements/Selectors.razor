@inherits HighlightPageBase
@page  "/{kitId}/selectors"

<div class="selectors page">
    <div class="page__container">
        <header>
            <div class="title">Elements</div>
            <h2>Selectors & Toggles</h2>
            <p>
                Radio and checkbox inputs allow for selection from a list of options. Radio allows a single selection of one option while checkbox allows for multiple selections.
            </p>
        </header>
        <div class="content">
            <h3>Style & States</h3>
            <p class="subheader">
                Active styling is applied when an option has been selected. Disabled styling is applied when a user cannot interact with or select a particular option.
            </p>
            @if (Model != null)
            {
                <EditForm Model="@Model">
                    <div class="section">
                        <label class="small">
                            Label Font Size (px)
                            <InputNumber @bind-Value="Model.FontSize" @oninput="Submit" placeholder="16" min="1" />
                        </label>
                        <label>
                            Label Font Weight
                            <FontWeights @bind-Value="Model.FontWeight" @bind-Value:event="OnValueChanged" />
                        </label>
                        <label>
                            Active Color
                            <Colors KitId="@kitId" @bind-Value="Model.ActiveColor" />
                        </label>
                    </div>
                    <div class="preview-example" style="font-size: @(Model.FontSize)px; font-weight: @Model.FontWeight;">
                        <div>
                            <label>
                                <input type="checkbox" /> Default
                            </label>
                            <label>
                                <input type="checkbox" checked /> Active
                            </label>
                            <label>
                                <input type="checkbox" disabled /> Disabled
                            </label>
                        </div>
                        <div>
                            <label>
                                <input type="radio" /> Default
                            </label>
                            <label>
                                <input type="radio" checked /> Active
                            </label>
                            <label>
                                <input type="radio" disabled /> Disabled
                            </label>
                        </div>
                    </div>
                    <pre>
                        <code class="language-html">
&lt;input type="checkbox"/&gt;
&lt;input type="checkbox" active /&gt;
&lt;input type="checkbox" disabled /&gt;

&lt;input type="radio"/&gt;
&lt;input type="radio" checked /&gt;
&lt;input type="radio" disabled /&gt;
                        </code>
                    </pre>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string kitId { get; set; }
    UpdateSelectorsModel Model;

    protected override async Task OnInitializedAsync()
    {
        Model = await PublicApi().GetSelectorsAsync(kitId);
    }

    private async Task Submit()
    {
        await PublicApi().UpdateSelectorsAsync(Model);
    }
}
