@inherits HighlightPageBase
@page  "/buttons"
@page  "/buttons/{kitId}"

<div class="buttons page">
    <div class="page__container">
        <header>
            <div class="title">Elements</div>
            <h2>Buttons</h2>
            <p>
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
        </header>
        <div class="content">
            <h3>Core Buttons</h3>
            <p class="subheader">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
            @if (kit != null)
            {
                <EditForm Model="@kit">
                    <div class="section">
                        <label>
                            Font Size
                            <InputText @bind-Value="kit.BodyFontSize" />
                        </label>
                        <label>
                            Font Weight
                            <InputText @bind-Value="kit.BodyFont" />
                        </label>
                        <label>
                            Vertical Padding
                            <InputText @bind-Value="kit.TertiaryColor" />
                        </label>
                        <label>
                            Horizontal Padding
                            <InputText @bind-Value="kit.PrimaryColor" />
                        </label>
                        <label>
                            Corner Radius
                            <InputText @bind-Value="kit.BodyFont" />
                        </label>
                        <label>
                            Border Width
                            <InputText @bind-Value="kit.TertiaryColor" />
                        </label>
                        <label>
                            Icon Width
                            <InputText @bind-Value="kit.SecondaryColor" />
                        </label>
                        <label>
                            Icon Height
                            <InputText @bind-Value="kit.TertiaryColor" />
                        </label>
                    </div>
                    <h4>Secondary Button</h4>
                    <div class="section">
                        <label class="switch">
                            <input type="checkbox" checked @onclick="ToggleBorder">
                            <span class="slider"></span>
                        </label>
                        Secondary Button Border
                    </div>
                    <div class="preview-example">
                        <div>
                            <button>Button</button>
                            <button>
                                <img src="/images/eyecon.svg" />
                                Button
                            </button>
                            <button>
                                Button
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button><img src="/images/eyecon.svg" /></button>
                        </div>
                        <div>
                            <button class="button-secondary @removeBorder">Button</button>
                            <button class="button-secondary @removeBorder">
                                <img src="/images/eyecon.svg" />
                                Button
                            </button>
                            <button class="button-secondary @removeBorder">
                                Button
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button class="button-secondary @removeBorder"><img src="/images/eyecon.svg" /></button>
                        </div>
                    </div>
                    <pre>
                    <code>
&lt;button&gt;Button Label&lt;/h1&gt;//default
&lt;!-- the button contents will adapt as you add labels, svgs, pngs or jpegs --&gt;
&lt;button&gt;&lt;img src="icon_eye.svg" alt="Image of Kodekit Eye"&gt;Button Label&lt;/button&gt;
&lt;button&gt;Button Label &lt;img src="icon_eye" alt="Image of Kodekit Eye"&gt;&lt;/button&gt;
&lt;button&gt;&lt;img src="icon_eye" alt="Image of Kodekit Eye"&gt;&lt;/button&gt;
                        </code>
                    </pre>
                    <h3>Button Variations & States</h3>
                    <p class="subheader">
                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
                    </p>
                    <div class="preview-example">
                        <div>
                            <button>Default</button>
                            <button>
                                Default
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button class="hover">Hover</button>
                            <button class="hover">
                                Hover
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button class="disabled">Disabled</button>
                            <button class="disabled">
                                Disabled
                                <img src="/images/eyecon.svg" />
                            </button>
                        </div>
                        <div>
                            <button class="button-secondary @removeBorder">Default</button>
                            <button class="button-secondary @removeBorder">
                                Default
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button class="hover-secondary @removeBorder">Hover</button>
                            <button class="hover-secondary @removeBorder">
                                Hover
                                <img src="/images/eyecon.svg" />
                            </button>
                            <button class="disabled-secondary @removeBorder">Disabled</button>
                            <button class="disabled-secondary @removeBorder">
                                Disabled
                                <img src="/images/eyecon.svg" />
                            </button>
                        </div>
                    </div>
                    <pre>
                    <code>
&lt;!-- control button state with html attributes --&gt;
&lt;button&gt;Button Label&lt;/h1&gt;//default
&lt;button disabled&gt;Button Label&lt;/h1&gt;
&lt;button class="secondary-btn"&gt;Button Label&lt;/h1&gt;
&lt;button class="secondary-btn" disabled&gt;Button Label&lt;/h1&gt;
                        </code>
                    </pre>
                    <button @onclick="Submit">
                        Save & Continue
                        <img src="/images/eyecon.svg" />
                    </button>
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    private Kit kit = new Kit();
    [Parameter] public string kitId { get; set; }
    string currentKitId;
    string removeBorder = "";

    protected override async Task OnInitializedAsync()
    {
        await GetKit();
    }

    private async Task GetKit()
    {
        //get from local storage
        string result = await localStorage.GetItemAsync<string>("kodekitId");
        currentKitId = result;

        if (kitId != null)
        {
            kit = await Api.GetKitAsync(currentKitId);
        }
        else if (currentKitId != null)
        {
            kit = await Api.GetKitAsync(currentKitId);
        }
    }

    private async Task Submit()
    {
        await Api.UpdateKitAsync(kit);
        Nav.NavigateTo("/inputs/" + kit.KitId);
    }

    private void ToggleBorder()
    {
        if(removeBorder == "")
        {
            removeBorder = "remove";
        } else
        {
            removeBorder = "";
        }
    }
}
