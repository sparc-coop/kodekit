@inherits HighlightPageBase
@page  "/{kitId}/buttons"

<div class="buttons page">
    <div class="page__container">
        <header>
            <div class="title">Elements</div>
            <h2>Buttons</h2>
            <p>
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
        </header>
        <div class="content">
            <h3>Core Buttons</h3>
            <p class="subheader">
                Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
            </p>
            @if (Model != null)
            {
                <EditForm Model="@Model">
                    <div class="section">
                        <label>
                            Font Size
                            <InputNumber @bind-Value="Model.FontSize" />
                        </label>
                        <label>
                            Font Weight
                            <FontWeights @bind-Value="Model.FontWeight" />
                        </label>
                        <label>
                            Vertical Padding
                            <InputNumber @bind-Value="Model.VerticalPadding" />
                        </label>
                        <label>
                            Horizontal Padding
                            <InputNumber @bind-Value="Model.HorizontalPadding" />
                        </label>
                        <label>
                            Corner Radius
                            <InputNumber @bind-Value="Model.CornerRadius" />
                        </label>
                        <label>
                            Border Width
                            <InputNumber @bind-Value="Model.BorderWidth" />
                        </label>
                        <label>
                            Icon Width
                            <InputNumber @bind-Value="Model.IconWidth" />
                        </label>
                        <label>
                            Icon Height
                            <InputNumber @bind-Value="Model.IconHeight" />
                        </label>
                    </div>

                    <label style="padding-bottom: 15px;">Secondary Button</label>
                    <div class="section">
                        <Switch @bind-Value=Model.RemoveSecondaryBorder Title="Secondary Button Border" />
                    </div>

                    <div class="preview-example">
                        <div>
                            <button>Button</button>
                            <button>
                                <KodekitLogoSvg />
                                Button
                            </button>
                            <button>
                                Button
                                <KodekitLogoSvg />
                            </button>
                            <button>
                                <KodekitLogoSvg />
                            </button>
                        </div>
                        <div>
                            <button class="secondary">Button</button>
                            <button class="secondary">
                                <KodekitLogoSvg />
                                Button
                            </button>
                            <button class="secondary">
                                Button
                                <KodekitLogoSvg />
                            </button>
                            <button class="secondary">
                                <KodekitLogoSvg />
                            </button>
                        </div>
                    </div>
                    <pre>
                    <code>
&lt;button&gt;Button Label&lt;/button&gt; &lt;!--default--&gt;
&lt;!-- the button contents will adapt as you add labels, svgs, pngs or jpegs --&gt;
&lt;button&gt;&lt;img src="icon_eye.svg" alt="Image of Kodekit Eye" /&gt;Button Label&lt;/button&gt;
&lt;button&gt;Button Label &lt;img src="icon_eye" alt="Image of Kodekit Eye"&gt;&lt;/button&gt;
&lt;button&gt;&lt;img src="icon_eye" alt="Image of Kodekit Eye" /&gt;&lt;/button&gt;
                        </code>
                    </pre>
                    <h3>Button Variations & States</h3>
                    <p class="subheader">
                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus.
                    </p>
                    <div class="preview-example">
                        <div>
                            <button>Default</button>
                            <button>
                                Default
                                <KodekitLogoSvg />
                            </button>
                            <button class="hover">Hover</button>
                            <button class="hover">
                                Hover
                                <KodekitLogoSvg />
                            </button>
                            <button disabled="disabled">Disabled</button>
                            <button disabled="disabled">
                                Disabled
                                <KodekitLogoSvg />
                            </button>
                        </div>
                        <div>
                            <button class="secondary">Default</button>
                            <button class="secondary">
                                Default
                                <KodekitLogoSvg />
                            </button>
                            <button class="secondary hover">Hover</button>
                            <button class="secondary hover">
                                Hover
                                <KodekitLogoSvg />
                            </button>
                            <button class="secondary" disabled="disabled">Disabled</button>
                            <button class="secondary" disabled="disabled">
                                Disabled
                                <KodekitLogoSvg />
                            </button>
                        </div>
                    </div>
                    <pre>
                    <code>
&lt;!-- control button state with html attributes --&gt;
&lt;button&gt;Button Label&lt;/button&gt;  &lt;!--default--&gt;
&lt;button disabled&gt;Button Label&lt;/button&gt;
&lt;button class="secondary-btn"&gt;Button Label&lt;/button&gt;
&lt;button class="secondary-btn" disabled&gt;Button Label&lt;/button&gt;
                        </code>
                    </pre>

                    <SaveAndContinue OnSubmit=Submit NextPage="inputs" />
                </EditForm>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public string kitId { get; set; }
    UpdateButtonsModel Model;

    protected override async Task OnInitializedAsync()
    {
        Model = await PublicApi().GetButtonsAsync(kitId);
    }
    
    private async Task Submit()
    {
        await PublicApi().UpdateButtonsAsync(Model);
    }
}
