<div class="@Show">
    <div class="colors page modal">
        <div class="modal--container">
            <Preview Kit=Kit ShowCode=false>
                <h3>Edit Colors</h3>
                <div class="color-preview--container">
                    <div class="subcolor-display">
                        @if (Type != null && Weights != null)
                        {
                            @foreach (var weight in Weights)
                            {
                                <span style="background-color: var(--@Type.ToLower()-@weight)"></span>
                            }
                        }
                    </div>
                </div>
                <button @onclick="Close">Cancel</button>
            </Preview>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Show { get; set; }
    [Parameter]
    public EventCallback CloseModal { get; set; }
    [Parameter]
    public string Type { get; set; }
    [Parameter]
    public List<string> Weights { get; set; }
    [Parameter]
    public Kit Kit { get; set; }

    private async Task Close()
    {
        await CloseModal.InvokeAsync();
    }
}